  "license": "AGPL-3.0-or-later",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs",
    "types": "./dist/index.d.ts"
  },
  "devDependencies": {
    "@fontsource/roboto": "^5.1.0",
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.8.6",
    "@vitest/browser": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "autoprefixer": "^10.4.20",
    "globals": "^15.11.0",
    "jsdom": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "pkgroll": "^2.5.1",
    "playwright": "1.48",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  },
